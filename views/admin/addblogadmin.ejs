
<script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>

<div style="font-family: 'Pridi', serif;">
  <%- include('component/navbaradmin.ejs') -%>
    <div class="container" style="padding-top: 10px ;margin-top: 70px;">
        <h1>เพิ่มข่าวสาร</h1><a href="/blog">ย้อนกลับ</a>
          <form action="/admin/add" method="POST" enctype="multipart/form-data"> 
              <div class="form-group">
