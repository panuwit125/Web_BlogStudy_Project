  <div style="font-family: 'Pridi', serif;">
    <%- include('componentlogin/navbar.ejs') -%>
      <div class="container" style="padding-top: 10px ;margin-top: 70px;">
          <h1>เพิ่มห้องเรียน</h1><a href="/study">ย้อนกลับ</a>
            <form action="/study/addstudy" method="POST" enctype="multipart/form-data"> 
                <div class="form-group">
